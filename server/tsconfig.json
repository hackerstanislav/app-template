{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.json"]
}
